@model IEnumerable<ProductDetail>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <!-- Añade esta línea -->
                <div class="card">
                    <div class="m-blank-auto">
                        <a asp-controller="ProductDetail" asp-action="Details" asp-route-id="@item.Id" style="color: inherit; text-decoration: none;">

                            <img src="@item.Product?.Image" class="image-adjust" alt="...">
                            <div class="card-body d-grid justify-content-center align-content-center">
                                <h5 class="card-title text-center font-weight-bold text-uppercase">@item.Product?.Name</h5>
                                <h4 class="card-title text-center text-primary my-3">$@item.Price</h4>
                                <p class="card-text text-muted">@item.Product?.Description</p>
                            </div>


                        </a>

                        <div class="d-flex justify-content-center mb-3">
                            <button class="btn btn-primary"><i class="fi fi-rr-add"></i> Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
